---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: "{{ _postgresql_name }}-pvc"
  namespace: "{{ _postgresql_namespace }}"
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: "{{ _postgresql_volume_size }}"
{% if _postgresql_volume_storage_class | length > 0 %}
  storageClassName: "{{ _postgresql_volume_storage_class }}"
{% endif %}
  volumeMode: Filesystem